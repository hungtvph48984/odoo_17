<odoo>
    <record id="view_hr_competency_level_tree" model="ir.ui.view">
        <field name="name">hr.competency.level.tree</field>
        <field name="model">hr.competency.level</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="score"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_competency_level_form" model="ir.ui.view">
        <field name="name">hr.competency.level.form</field>
        <field name="model">hr.competency.level</field>
        <field name="arch" type="xml">
            <form string="Cấp độ năng lực">
                <group>
                    <field name="name"/>
                    <field name="score"/>
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="menu_hr_competency_level" name="Cấp độ năng lực" parent="menu_khung_nang_luc_cauhinh" action="action_hr_competency_level"/>

    <record id="action_hr_competency_level" model="ir.actions.act_window">
        <field name="name">Cấp độ năng lực</field>
        <field name="res_model">hr.competency.level</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
