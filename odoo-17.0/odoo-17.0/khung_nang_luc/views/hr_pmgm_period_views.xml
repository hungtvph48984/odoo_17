<odoo>
    <record id="view_hr_pmgm_period_tree" model="ir.ui.view">
        <field name="name">hr.pmgm.period.tree</field>
        <field name="model">hr.pmgm.period</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_pmgm_period_form" model="ir.ui.view">
        <field name="name">hr.pmgm.period.form</field>
        <field name="model">hr.pmgm.period</field>
        <field name="arch" type="xml">
            <form string="Chu kỳ đánh giá">
                <group>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="menu_hr_pmgm_period" name="Chu kỳ đánh giá" parent="menu_khung_nang_luc_cauhinh" action="action_hr_pmgm_period"/>

    <record id="action_hr_pmgm_period" model="ir.actions.act_window">
        <field name="name">Chu kỳ đánh giá</field>
        <field name="res_model">hr.pmgm.period</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
